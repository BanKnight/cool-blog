<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" href="https:///cdn.bootcss.com/normalize/8.0.0/normalize.min.css">
    <link rel="stylesheet" href="https:///cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/public/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="/public/admin.style.css" media="all">

    <script src="/public/layui/layui.js" charset="utf-8"></script>

    {{block 'head'}}
    {{/block}}

</head>

<body class="layui-bg-gray">

    <div class="layui-layout">
        <div class="layui-row">
            <ul class="layui-nav layui-bg-molv">
                <li class="layui-nav-item">
                    <a href="/">主页</a>
                </li>
                <li class="layui-nav-item" id="nav_posts">
                    <a href="/admin/posts">文章列表</a>
                </li>
                    <li class="layui-nav-item" id="nav_post">
                    <a href="/admin/post">添加文章</a>
                </li>                   
            </ul>
        </div>
        
        <script>
            var navs = ["nav_posts","nav_post"]
            function set_nav(id)
            {
                console.log(`set nav ${id}`)

                for(var i = 0;i< navs.length;++i)
                {
                    var exist = navs[i]
                    var item = document.getElementById(exist) 

                    if(exist != id)
                    {
                        item.className="layui-nav-item"
                    }
                    else
                    {
                        item.className="layui-nav-item layui-this"
                    }
                }
            }
        </script>
        <div class="layui-row" style="padding: 1em 1em 0 1em">
            {{block 'body'}}
            {{/block}}
        </div>
    </div>

    <script>
        layui.use('element', function () {
            var element = layui.element; //导航的hover效果、二级菜单等功能，需要依赖element模块

        });
    </script>
</body>

</html>